<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Store Inventory</title>
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #f8fafc 0%, #e0e7ff 100%);
            margin: 0;
            padding: 0;
            min-height: 100vh;
        }
        .container {
            max-width: 700px;
            margin: 40px auto;
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.08);
            padding: 32px 40px;
        }
        h1 {
            text-align: center;
            color: #3b82f6;
            margin-bottom: 32px;
            font-weight: 700;
            letter-spacing: 1px;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        .product-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            background: #f3f4f6;
            border-radius: 8px;
            margin-bottom: 16px;
            padding: 18px 24px;
            transition: box-shadow 0.2s;
            box-shadow: 0 2px 8px rgba(59,130,246,0.05);
        }
        .product-item:hover {
            box-shadow: 0 4px 16px rgba(59,130,246,0.12);
            background: #e0e7ff;
        }
        .product-name {
            font-size: 1.2em;
            font-weight: 500;
            color: #1e293b;
            text-decoration: none;
            margin-right: 16px;
        }
        .product-details {
            color: #64748b;
            font-size: 1em;
            margin-right: 16px;
        }
        .product-quantity {
            color: #10b981;
            font-weight: 700;
            font-size: 1em;
        }
        .low-quantity {
            color: #ef4444 !important;
        }
        @media (max-width: 600px) {
            .container {
                padding: 16px 8px;
            }
            .product-item {
                flex-direction: column;
                align-items: flex-start;
                padding: 12px 8px;
            }
            .product-name, .product-details, .product-quantity {
                margin-right: 0;
                margin-bottom: 6px;
            }
        }
        .action-btn {
            padding: 0.35rem 1.1rem;
            border-radius: 6px;
            font-size: 0.98em;
            font-weight: 500;
            border: none;
            cursor: pointer;
            text-decoration: none;
            transition: background 0.18s, color 0.18s;
            margin-left: 0.2rem;
        }
        .edit-btn {
            background: #fbbf24;
            color: #fff;
            border: 1px solid #fbbf24;
        }
        .edit-btn:hover {
            background: #f59e42;
            color: #fff;
        }
        .delete-btn {
            background: #ef4444;
            color: #fff;
            border: 1px solid #ef4444;
        }
        .delete-btn:hover {
            background: #b91c1c;
            color: #fff;
        }
        .add-product-btn {
            position: fixed;
            bottom: 32px;
            right: 32px;
            width: 56px;
            height: 56px;
            background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%);
            color: #fff;
            border-radius: 50%;
            box-shadow: 0 4px 16px rgba(59,130,246,0.18);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.2rem;
            font-weight: 700;
            text-decoration: none;
            transition: background 0.2s, box-shadow 0.2s;
            z-index: 1000;
        }
        .add-product-btn:hover {
            background: linear-gradient(90deg, #60a5fa 0%, #3b82f6 100%);
            box-shadow: 0 8px 24px rgba(59,130,246,0.28);
            color: #fff;
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Store Inventory</h1>
        <% if (products.length === 0) { %>
            <div style="text-align:center; margin: 40px 0 24px 0;">
                <p style="color:#64748b; font-size:1.1em; margin-Wbottom: 18px;">No products found in inventory.</p>
                <a href="/products/new" style="display:inline-block; background: linear-gradient(90deg, #3b82f6 0%, #60a5fa 100%); color: #fff; padding: 0.7rem 1.5rem; border-radius: 8px; text-decoration: none; font-weight: 600; font-size: 1.05em; box-shadow: 0 2px 8px rgba(59,130,246,0.10); transition: background 0.2s;">+ Add New Product</a>
            </div>
        <% } else { %>
            <ul>
                <% products.forEach(product => { %>
                    <li class="product-item">
                        <span class="product-name"><%= product.name %></span>
                        <span class="product-details">$<%= product.price %></span>
                        <span class="product-quantity<%= product.quantity < 5 ? ' low-quantity' : '' %>">Quantity: <%= product.quantity %></span>
                        <div class="action-btn-group">
                                    
                            <a href="/products/<%= product.id %>/edit" class="action-btn edit-btn">Edit</a>
                            <form action="/products/<%= product.id %>/delete" method="POST" style="display:inline;">
                                <button type="submit" class="action-btn delete-btn" onclick="return confirm('Are you sure you want to delete this product?');">Delete</button>
                            </form>
                        </div>
                    </li>
                <% }) %>
            </ul>
        <% } %>
    </div>
    <a href="/products/new" class="add-product-btn" title="Add New Product">+</a>
</body>
      